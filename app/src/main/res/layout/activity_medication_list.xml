<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.su.lapponampai_w.mhm_app_beta1.MedicationListActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6643ff"
        android:layout_gravity="center"
        android:id="@+id/linHeadingMedicationList">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:src="@drawable/btn_menu"
            android:background="#00000000"
            android:layout_weight="10"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="MHM Application"
            android:id="@+id/textView40"
            android:layout_weight="200"
            android:textColor="#ffffff"
            android:textSize="27sp"
            android:gravity="center_vertical|center_horizontal" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/imageButtonCalendar2"
            android:src="@drawable/btn_calendar"
            android:background="#00000000"
            android:layout_weight="10" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linHeadingMedicationList2"
        android:layout_below="@+id/linHeadingMedicationList">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="รายการยา"
            android:id="@+id/textView41"
            android:textSize="@dimen/heading3"
            android:gravity="center"
            android:padding="@dimen/z2_margin_bigspace" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linHeadingMedicationList3"
        android:background="#fc7600"
        android:layout_below="@+id/linHeadingMedicationList2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:id="@+id/textView17"
            android:textSize="1sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linListViewMedicationList"
        android:layout_below="@+id/linHeadingMedicationList3">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView_MedicationList"
            android:focusableInTouchMode="true" />
    </LinearLayout>

    <Spinner
        android:layout_width="63dp"
        android:layout_height="64dp"
        android:id="@+id/spinner4"
        android:background="@drawable/btn_menu" />

</RelativeLayout>
