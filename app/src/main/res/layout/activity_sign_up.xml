<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.su.lapponampai_w.mhm_app_beta1.SignUpActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/z1_linearlayout_margin_top"
        android:layout_above="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ลงทะเบียน"
            android:id="@+id/textView2"
            android:textSize="@dimen/heading2"
            android:layout_marginBottom="@dimen/z2_margin_biggap" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/z2_margin_smallgap">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username :"
                android:id="@+id/textView3"
                android:textSize="@dimen/heading3"
                android:layout_marginLeft="@dimen/z2_margin_space"
                android:layout_marginRight="@dimen/z2_margin_space" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_SignUp_Username"
                android:layout_marginLeft="@dimen/z2_margin_space"
                android:layout_marginRight="@dimen/z2_margin_space" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/z2_margin_smallgap">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password :"
                android:id="@+id/textView4"
                android:textSize="@dimen/heading3"
                android:layout_marginLeft="@dimen/z2_margin_space"
                android:layout_marginRight="@dimen/z2_margin_space" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_SignUp_Password"
                android:layout_marginLeft="@dimen/z2_margin_space"
                android:layout_marginRight="@dimen/z2_margin_space"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/z2_margin_smallgap">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Re-Password :"
                android:id="@+id/textView5"
                android:textSize="@dimen/heading3"
                android:layout_marginLeft="@dimen/z2_margin_space"
                android:layout_marginRight="@dimen/z2_margin_space" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_SignUp_RePassword"
                android:layout_marginLeft="@dimen/z2_margin_space"
                android:layout_marginRight="@dimen/z2_margin_space"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="@dimen/z2_margin_biggap" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospital Number :"
                android:id="@+id/textView6"
                android:textSize="@dimen/heading3"
                android:layout_marginLeft="@dimen/z2_margin_space"
                android:layout_marginRight="@dimen/z2_margin_space" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_SignUp_Email"
                android:layout_marginLeft="@dimen/z2_margin_space"
                android:layout_marginRight="@dimen/z2_margin_space"
                android:inputType="textEmailAddress" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentLeft="false"
        android:id="@+id/linearLayout"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ลงทะเบียน"
            android:id="@+id/button_SignUp_SignUp"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ล้างข้อมูล"
            android:id="@+id/button_SignUp_ClearText"
            android:layout_weight="1" />

    </LinearLayout>
</RelativeLayout>
