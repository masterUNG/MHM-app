<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_pw"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.su.lapponampai_w.mhm_app_beta1.ChangePWActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linPW1">

        <TextView
            android:text="เปลี่ยนรหัสผ่าน"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView180"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="@dimen/heading2"
            android:background="#6643ff"
            android:paddingTop="@dimen/z2_margin_space"
            android:paddingBottom="@dimen/z2_margin_space"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linPW1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView178"
        android:textSize="@dimen/heading3"
        android:layout_marginTop="@dimen/z2_margin_space"
        android:layout_marginLeft="@dimen/z2_margin_space"
        android:gravity="right" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/z2_margin_smallgap"
        android:layout_marginTop="@dimen/z2_margin_biggap"
        android:layout_marginRight="@dimen/z2_margin_biggap">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView175"
            android:layout_weight="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText15"
            android:layout_weight="1" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/z2_margin_smallgap"
        android:layout_marginTop="@dimen/z2_margin_smallgap"
        android:layout_marginRight="@dimen/z2_margin_biggap">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView176"
            android:layout_weight="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText16"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/z2_margin_smallgap"
        android:layout_marginTop="@dimen/z2_margin_smallgap"
        android:layout_marginRight="@dimen/z2_margin_biggap">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView177"
            android:layout_weight="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText17"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/z2_margin_biggap">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ยืนยัน"
            android:id="@+id/buttonPWSave"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ยกเลิก"
            android:id="@+id/buttonPWCancel"
            android:layout_weight="1"
            />
    </LinearLayout>


</LinearLayout>
