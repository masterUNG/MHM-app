<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.su.lapponampai_w.mhm_app_beta1.DailyFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/textView93"
            android:id="@+id/linCalendar"
            android:layout_marginTop="40dp"
            android:weightSum="1"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="ปฏิทิน"
                android:id="@+id/textView92"
                android:textSize="@dimen/heading3"
                android:gravity="center_vertical|center_horizontal"
                android:background="#b500b8"
                android:textColor="#ffffff" />

            <CalendarView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/calendarView"
                android:padding="@dimen/z2_margin_bigspace" />

        </LinearLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listViewDaily"
            android:layout_below="@+id/linCalendar"
            android:padding="@dimen/z2_margin_bigspace" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView6"
            android:layout_below="@+id/linCalendar"
            android:background="#8cdecf9b" />

    </RelativeLayout>

</FrameLayout>
